{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Question</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ question.id }}</td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ question.content }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        {% if question.imageName %}
                            <img src="{{ vich_uploader_asset(question, 'imageFile') }}" 
                                 alt="Image de la question" 
                                 class="img-fluid"
                                 style="max-width: 500px;">
                        {% else %}
                            <span class="text-muted">Pas d'image</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Quiz</th>
                    <td>{{ question.quiz ? question.quiz.title : 'N/A' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_question_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
        <a href="{{ path('app_question_edit', {'id': question.id}) }}" class="btn btn-warning">Modifier</a>
    </div>
{% endblock %}