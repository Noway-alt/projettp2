{% extends 'base.html.twig' %}

{% block title %}Answer{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Réponse</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ answer.id }}</td>
                </tr>
                <tr>
                    <th>Texte</th>
                    <td>{{ answer.text }}</td>
                </tr>
                <tr>
                    <th>Correcte ?</th>
                    <td>
                        {% if answer.isCorrect %}
                            <span class="badge bg-success">✓ Oui</span>
                        {% else %}
                            <span class="badge bg-danger">✗ Non</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Question</th>
                    <td>{{ answer.question ? answer.question.content : 'N/A' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_answer_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_answer_edit', {'id': answer.id}) }}" class="btn btn-warning">Modifier</a>
    </div>
{% endblock %}