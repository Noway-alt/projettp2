{% extends 'base.html.twig' %}

{% block title %}Réponse{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Réponse</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ answer.id }}</td>
                </tr>
                <tr>
                    <th>Texte</th>
                    <td>{{ answer.text }}</td>
                </tr>
                <tr>
                    <th>Réponse correcte ?</th>
                    <td>
                        {% if answer.isCorrect %}
                            <span class="badge bg-success">✓ Oui</span>
                        {% else %}
                            <span class="badge bg-danger">✗ Non</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Question associée</th>
                    <td>
                        {% if answer.question %}
                            {{ answer.question.content|slice(0, 100) }}
                            {% if answer.question.content|length > 100 %}...{% endif %}
                        {% else %}
                            <span class="text-muted">Aucune question associée</span>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_answer_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
            <a href="{{ path('app_answer_edit', {'id': answer.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Modifier
            </a>
        </div>
    </div>
{% endblock %}