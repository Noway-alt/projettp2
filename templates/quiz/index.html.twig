{% extends 'base.html.twig' %}

{% block title %}Quiz index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Quiz</h1>

        {# Formulaire de recherche #}
        <form method="get" class="mb-3">
            <div class="input-group">
                <input type="text" 
                       name="q" 
                       class="form-control" 
                       placeholder="Rechercher un quiz..." 
                       value="{{ search_query }}">
                <button type="submit" class="btn btn-primary">Rechercher</button>
                {% if search_query %}
                    <a href="{{ path('app_quiz_index') }}" class="btn btn-secondary">Réinitialiser</a>
                {% endif %}
            </div>
        </form>

        <div class="mb-3">
            <a href="{{ path('app_quiz_new') }}" class="btn btn-success">Créer un nouveau quiz</a>
        </div>

        {# Barre de tri #}
        <div class="mb-3">
            <strong>Trier par :</strong>
            <a href="{{ path('app_quiz_index', {sort: 'title', order: current_order == 'ASC' ? 'DESC' : 'ASC', q: search_query}) }}" 
               class="btn btn-sm btn-outline-secondary">
                Titre {% if current_sort == 'title' %}{{ current_order == 'ASC' ? '↑' : '↓' }}{% endif %}
            </a>
            <a href="{{ path('app_quiz_index', {sort: 'id', order: current_order == 'ASC' ? 'DESC' : 'ASC', q: search_query}) }}" 
               class="btn btn-sm btn-outline-secondary">
                ID {% if current_sort == 'id' %}{{ current_order == 'ASC' ? '↑' : '↓' }}{% endif %}
            </a>
        </div>

        {# Nombre de résultats #}
        {% if search_query %}
            <div class="alert alert-info">
                {{ quizzes|length }} résultat(s) pour "{{ search_query }}"
            </div>
        {% endif %}

        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for quiz in quizzes %}
                <tr>
                    <td>{{ quiz.id }}</td>
                    <td>{{ quiz.title }}</td>
                    <td>{{ quiz.description|slice(0, 100) }}{% if quiz.description|length > 100 %}...{% endif %}</td>
                    <td>
                        <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">
                        {% if search_query %}
                            Aucun quiz trouvé pour "{{ search_query }}"
                        {% else %}
                            Aucun quiz disponible
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}