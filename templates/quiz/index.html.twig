{% extends 'base.html.twig' %}

{% block title %}Gestion des Quiz{% endblock %}

{% block body %}
    <div class="container mt-4 fade-in">
        {# En-tête de page #}
        <div class="page-header">
            <h1 class="page-title">Gestion des Quiz</h1>
            <p class="page-subtitle">Créez et gérez vos quiz</p>
        </div>

        {# Formulaire de recherche #}
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" class="mb-0">
                    <div class="input-group">
                        <input type="text" 
                               name="q" 
                               class="form-control" 
                               placeholder="Rechercher un quiz..." 
                               value="{{ search_query }}">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Rechercher
                        </button>
                        {% if search_query %}
                            <a href="{{ path('app_quiz_index') }}" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Réinitialiser
                            </a>
                        {% endif %}
                    </div>
                </form>
            </div>
        </div>

        {# Bouton créer + tri #}
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
            <div>
                <a href="{{ path('app_quiz_new') }}" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Créer un nouveau quiz
                </a>
            </div>
            <div>
                <strong>Trier par :</strong>
                <a href="{{ path('app_quiz_index', {sort: 'title', order: current_order == 'ASC' ? 'DESC' : 'ASC', q: search_query}) }}" 
                   class="btn btn-sm btn-outline-primary">
                    Titre {% if current_sort == 'title' %}{{ current_order == 'ASC' ? '↑' : '↓' }}{% endif %}
                </a>
                <a href="{{ path('app_quiz_index', {sort: 'id', order: current_order == 'ASC' ? 'DESC' : 'ASC', q: search_query}) }}" 
                   class="btn btn-sm btn-outline-primary">
                    ID {% if current_sort == 'id' %}{{ current_order == 'ASC' ? '↑' : '↓' }}{% endif %}
                </a>
            </div>
        </div>

        {# Message de résultats de recherche #}
        {% if search_query %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> {{ quizzes|length }} résultat(s) pour "{{ search_query }}"
            </div>
        {% endif %}

        {# Tableau des quiz #}
        <div class="card">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Titre</th>
                            <th>Description</th>
                            <th>Questions</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for quiz in quizzes %}
                        <tr>
                            <td><span class="badge bg-primary">{{ quiz.id }}</span></td>
                            <td><strong>{{ quiz.title }}</strong></td>
                            <td>{{ quiz.description|slice(0, 100) }}{% if quiz.description|length > 100 %}...{% endif %}</td>
                            <td>
                                <span class="badge bg-info">
                                    <i class="bi bi-question-circle"></i> {{ quiz.questions|length }}
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}" class="btn btn-sm btn-info" title="Voir">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted py-5">
                                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                <p class="mt-3">
                                    {% if search_query %}
                                        Aucun quiz trouvé pour "{{ search_query }}"
                                    {% else %}
                                        Aucun quiz disponible. Créez-en un !
                                    {% endif %}
                                </p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}